{
  "name": "express-pig",
  "version": "0.6.0",
  "main": "index.js",
  "repository": "git@github.com:DmytroMysak/koa-pig.git",
  "author": "Dmytro Mysak",
  "license": "MIT",
  "scripts": {
    "start-dev": "node index.js",
    "start": "gulp && better-npm-run start-prod",
    "start-dev-pm2": "gulp && better-npm-run start-dev"
  },
  "betterScripts": {
    "start-prod": {
      "command": "pm2 start dist/index.js --name bot-prod",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-dev": {
      "command": "pm2 start dist/index.js --name bot-dev",
      "env": {
        "NODE_ENV": "development"
      }
    }
  },
  "dependencies": {
    "better-npm-run": "^0.1.0",
    "dotenv": "^6.0.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.1",
    "p-queue": "^3.0.0",
    "pino": "^5.10.6",
    "play-sound": "^1.1.2",
    "pm2": "^3.0.4",
    "ws": "^6.1.2"
  },
  "devDependencies": {
    "eslint": "^5.12.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "pino-pretty": "^2.5.0"
  }
}
